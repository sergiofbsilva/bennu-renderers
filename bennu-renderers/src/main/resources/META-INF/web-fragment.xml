<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0">
	<name>bennu-renderers</name>

	<ordering>
		<after>
			<!-- [START OF BENNU GENERATED FRAGMENT] -->
			<!-- [END OF BENNU GENERATED FRAGMENT] -->
		</after>
		<before>
			<others />
		</before>
	</ordering>

	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>pt.ist.bennu.renderers.servlets.ActionServletWrapper</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

    <jsp-config>
        <jsp-property-group>
          <description>All JSPs</description>
          <url-pattern>*.jsp</url-pattern>
          <el-ignored>true</el-ignored>
          <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-fragment>
